<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/On_tertiary_container"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_store_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:srcCompat="@drawable/ic_thank"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textview_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae_bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="@color/shrine_pink_100"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="매장명"
            />

        <TextView
            android:id="@+id/textview_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="@color/shrine_pink_50"
            android:text="매장명"
            android:layout_margin="3dp"
            />


    <!--        <ImageView-->
    <!--            android:id="@+id/star"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:src="@drawable/ic_kid_star_red"-->
    <!--            />-->
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>