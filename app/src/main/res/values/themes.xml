<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CloudBridge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shrine_pink_900</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/shrine_pink_900</item>
    </style>

    <!--activity_sign_or_login.xml!-->
    <style name="Widget.App.MyTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/shrine_pink_900</item>
        <item name="tabSelectedTextColor">@color/blue_grey</item>
    </style>

    <style name="Theme.CloudBridge" parent="Base.Theme.CloudBridge" />

    <style name="Theme.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/Tertiary_container</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>
</resources>